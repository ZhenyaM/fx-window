<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
        <!--fx:controller="tensor.technology.uf.desktop.view.controller.v1.MenuBarController"-->
<?import javafx.scene.control.Label?>
<HBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fx.window.controller.MenuBarController"
      fx:id="menuBarContainer"
      spacing="5" alignment="CENTER" prefHeight="27.0">
    <ImageView fx:id="menuIcon">
    </ImageView>
    <Label fx:id="menuIconLabel"/>
    <Region HBox.hgrow="ALWAYS" fx:id="winMove" prefHeight="27.0">
        <cursor>
            <Cursor fx:constant="MOVE"/>
        </cursor>
        <padding>
            <Insets left="-10"/>
        </padding>
    </Region>
    <ButtonBar buttonMinWidth="10.0" maxWidth="80.0" minWidth="80.0" prefWidth="80.0"
               fx:id="buttonsBar"
               StackPane.alignment="CENTER_RIGHT">
        <buttons>
            <Button fx:id="minimizeButton" alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="minimize_button">
                <graphic>
                    <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icon/control-curtail.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="maximizeButton" alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="maximize_button">
                <graphic>
                    <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icon/control-expand.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="exitButton" alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="close_button">
                <graphic>
                    <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icon/control-close.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </buttons>
        <StackPane.margin>
            <Insets top="-4.0"/>
        </StackPane.margin>
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
    </ButtonBar>
</HBox>
